{
  "name": "next-ssg-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run clean && next build",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "clean": "rimraf .next build .swc out coverage",
    "start": "npx serve ./build/",
    "code:check": "eslint ./src --ext .ts,.tsx --report-unused-disable-directives --max-warnings=0",
    "code:format": "eslint ./src --ext .ts,.tsx --fix",
    "prepare": "husky install",
    "postbuild": "next-sitemap --config next-sitemap.config.js"
  },
  "dependencies": {
    "next": "13.4.7",
    "next-seo": "^6.1.0",
    "next-sitemap": "^4.1.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "^6.0.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^13.4.7",
    "@types/node": "^20.3.2",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "cross-env": "^7.0.3",
    "eslint": "8.43.0",
    "eslint-config-next": "13.4.7",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  }
}
